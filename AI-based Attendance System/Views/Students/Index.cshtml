@model IEnumerable<AI_based_Attendance_System.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-primary mb-0">Students List</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Add New Student
    </a>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Profile Picture</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <img src="@item.ImagePath" alt="@item.Name" width="60" height="60"
                                 class="student-image" />
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="@Url.Action("Edit", new { id = item.Id })"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("Details", new { id = item.Id })"
                                   class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })"
                                   class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>